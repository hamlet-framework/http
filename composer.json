{
  "name": "hamlet-framework/http",
  "type": "framework",
  "description": "Hamlet Framework / HTTP",
  "keywords": ["framework"],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Vasily Kartashov",
      "email": "info@kartashov.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true
  },
  "require": {
    "php": "^7",
    "ext-json": "@stable",
    "psr/log": "@stable",
    "psr/cache": "@stable",
    "mustache/mustache": "@stable",
    "hamlet-framework/http-message": "@stable",
    "hamlet-framework/type": "@stable"
  },
  "require-dev": {
    "hamlet-framework/http-message-spec": "@stable",
    "phpunit/phpunit": "^6 || ^7",
    "squizlabs/php_codesniffer": "@stable",
    "vimeo/psalm": "@stable",
    "monolog/monolog": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Hamlet\\Http\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamlet\\Http\\": "tests"
    }
  }
}
